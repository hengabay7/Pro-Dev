pipeline {
    agent any

    environment {
        TF_VERSION = "1.6.0"
        TF_DIR = "Terraform"
        AWS_ACCESS_KEY_ID     = credentials('AWS_ACCESS_KEY_ID')
        AWS_SECRET_ACCESS_KEY = credentials('AWS_SECRET_ACCESS_KEY')
        DOCKER_IMAGE = "hengabay7/appflask"
        VERSION = "1.0.${env.BUILD_NUMBER}"  // ◊í◊®◊°◊î ◊ì◊ô◊†◊û◊ô◊™ ◊ú◊§◊ô ◊û◊°◊§◊® -Build
    }

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/hengabay7/Pro-Dev.git'
            }
        }

        stage('Initialize Terraform') {
            when { branch 'main' }
            steps {
                dir("${TF_DIR}") {
                    script {
                        def isInitialized = sh(script: "test -d .terraform && echo 'true' || echo 'false'", returnStdout: true).trim()
                        if (isInitialized == 'false') {
                            echo "Terraform is not initialized. Running 'terraform init'..."
                            sh 'terraform init'
                        } else {
                            echo "Terraform is already initialized. Skipping init."
                        }
                    }
                }
            }
        }

        stage('Plan Terraform') {
            when { branch 'main' }
            steps {
                dir("${TF_DIR}") {
                    sh 'terraform plan -out=tfplan'
                }
            }
        }

        stage('Apply Terraform') {
            when { branch 'main' }
            steps {
                dir("${TF_DIR}") {
                    sh 'terraform apply -auto-approve tfplan'
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                sh """
                echo "üî® Building Docker image with tag: ${VERSION}"
                docker build -t ${DOCKER_IMAGE}:${VERSION} ./appflask
                """
            }
        }


        stage('Test Application') {
            steps {
                script {                 
                    echo "üöÄ Running unit tests..."
                    sh "docker run --rm -v $(pwd):/app -w /app python:3.9 python -m unittest SimpleTest"
                    echo "‚úÖ All tests passed successfully!"                
                }
            }
        }


        stage('Push to Docker Hub') {
            when{
                branch 'main'
            }
            steps {
                withCredentials([usernamePassword(credentialsId: 'docker-hub-credentials', usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_PASS')]) {
                    sh """
                    echo "\$DOCKER_PASS" | docker login -u "\$DOCKER_USER" --password-stdin
                    echo "üì§ Pushing Docker image: ${DOCKER_IMAGE}:${VERSION}"
                    docker tag ${DOCKER_IMAGE}:${VERSION} ${DOCKER_IMAGE}:${VERSION}
                    docker push ${DOCKER_IMAGE}:${VERSION}
                    """
                }
            }
        }


        stage('Fetch Elastic IP') {
            when{
                branch 'main'
            }
            steps {
                script {
                    echo "Fetching EC2 Elastic IP..."
            
                    def ec2_ip = sh(
                        script: """
                        aws ec2 describe-addresses --region us-east-1 \
                        --filters "Name=tag:Name,Values=MyElasticIP" \
                        --query 'Addresses[0].PublicIp' --output text
                        """,
                        returnStdout: true
                    ).trim()

                    if (!ec2_ip || ec2_ip == "None") {
                        error "‚ùå No Elastic IP found with name 'MyElasticIP'! Please verify the Elastic IP exists."
                    }

                    echo "‚úÖ Elastic IP found: ${ec2_ip}"
                    env.EC2_IP = ec2_ip
                }
            }
        }

        stage('Deploy to EC2') {
            when{
                branch 'main'
            }
            steps {
                sshagent(['keypaircicd']) {
                    sh """
                    echo "üöÄ Deploying to EC2 at ${EC2_IP} with image ${DOCKER_IMAGE}:${VERSION}..."

                    mkdir -p /var/jenkins_home/.ssh
                    chmod 700 /var/jenkins_home/.ssh
                    touch /var/jenkins_home/.ssh/known_hosts
                    chmod 644 /var/jenkins_home/.ssh/known_hosts

                    ssh -o StrictHostKeyChecking=no ec2-user@${EC2_IP} <<EOF
                    echo "üîÑ Stopping old container..."
                    docker stop appflask || true
                    docker rm appflask || true

                    echo "‚¨á Pulling new Docker image..."
                    docker pull ${DOCKER_IMAGE}:${VERSION}

                    echo "üöÄ Running new container..."
                    docker run -d --name appflask -p 80:5000 --restart=always ${DOCKER_IMAGE}:${VERSION}

                    echo "üìã Checking running containers..."
                    docker ps
EOF
                    """
                }
            }
        }
    }

}