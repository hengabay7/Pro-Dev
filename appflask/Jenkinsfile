pipeline {
    agent any

     environment {
        TF_VERSION = "1.6.0"
        TF_DIR = "./Terraform"  
    }

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/hengabay7/Pro-Dev.git'
            }
        }
    
    stage('Initialize Terraform') {
            steps {
                dir("${TF_DIR}") {
                    sh 'terraform init'
                }
            }
        }

    stage('Plan Terraform') {
            steps {
                dir("${TF_DIR}") {
                    sh 'terraform plan -out=tfplan'
                }
            }
        }

    stage('Apply Terraform') {
            steps {
                dir("${TF_DIR}") {
                    input message: 'Apply Terraform changes?', ok: 'Apply'
                    sh 'terraform apply -auto-approve tfplan'
                }
            }
        }
    }


    
    stages {
        stage('Build') {
            steps {
                echo "Building for ${env.BRANCH_NAME}"
                 sh "docker build ./appflask -t appflask:one"               
            }
        }

        stage('Test') {
                steps {                                    
                    echo "Running test_app.py on Jenkins agent"  
                    sh 'docker run -t appflask:one sh -c "python3 -m unittest discover -s . -p test_app.py" '
            }
        }                
        
        stage('Deploy') {
            when {
                branch 'main'
            }
            steps {
                echo "Deploying, branch: ${env.BRANCH_NAME}"
            }
        }
    }
}